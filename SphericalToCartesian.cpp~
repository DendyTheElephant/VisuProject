#include "SphericalToCartesian.h"
#include <cmath>
using namespace std;

SphericalToCartesian::SphericalToCartesian():latitude(0.),longitude(0.),altitude(0.){}
SphericalToCartesian::SphericalToCartesian(double& la, double& lo, double& al):latitude(la),longitude(lo),altitude(al){}
SphericalToCartesian::~SphericalToCartesian(){}

const double& SphericalToCartesian::X()const{return ((double)(R)+altitude)*cos(latitude*(double)(M_PI)/180.)*cos(longitude*(double)(M_PI)/180.);}
const double& SphericalToCartesian::Y()const{return ((double)(R)+altitude)*cos(latitude*(double)(M_PI)/180.)*sin(longitude*(double)(M_PI)/180.);}
const double& SphericalToCartesian::Z()const{return ((double)(R)+altitude)*sin(latitude*(double)(M_PI)/180.);}
